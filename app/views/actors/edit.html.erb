<h1> Edit <%= @actor.first_name %> <%= @actor.last_name %></h1>
<form action="/actors/<%= @actor.id %>" method="post">
	<div>
		<label>First Name:</label>
		<input type="text" name="actor[first_name]" value="<%= @actor.first_name %>">
	</div>
	<div>
		<label>Last Name:</label>
		<input type="text" name="actor[last_name]" value="<%= @actor.last_name %>">
	</div>
	<input type="submit" value="Update">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div><%= e %></div>
	<% end %>
<%end%>